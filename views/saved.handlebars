<nav class="navbar navbar-expand-lg navbar-light" id="nav">
  <span class="navbar-brand">News Scraper</span>
  <div id="navbarNav"></div>
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/">Home </a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/saved"></a>Saved Articles</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/clear">Clear Articles</a>
      </li>
    </ul>
  </div>
</nav>

<div class="jumbotron jumbotron-fluid">
  <div class="container text-center">
    <h1 class="display-4" id="jumbo-title">Saved Articles</h1>
    <p class="lead" id="jumbo-p">News Scraper: Headlines from BBC</p>
  </div>
</div>

<div id="container-body">
    <div id="savedArticles">


{{#each article}}
{{#if saved}}
<div class="card">
  <div class="card-header">
    <div class="savedCardTitle">
        <a class="article-title" href="https://www.bbc.com{{this.link}}" target="_blank">{{this.title}}</a>
    </div>

    <div id="DeleteArticleButton"><button  class="btn btn-primary deleteSaved" data-id="{{this._id}}">Delete from Saved</button></div>
    <div id="articleNoteButton"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#commentsModal" id="openComments" data-id="{{this._id}}">Article Notes</button></div>
    
  </div>
  <div class="card-body">
    <p class="card-text-body">Summary: {{this.summary}}</p>
   
  </div>
</div>
{{/if}}
{{/each}}


{{!-- if no articles in the database at all --}}
{{#unless article}}
<div class="card" id="noArticles">
  <div class="card-body text-center">
    <p class="card-text-body" id="noArticlesText">It looks like no articles are saved yet!</p>
   
   <a href="/" ><button class="btn btn-primary">Head back to the main page to save some!</button></a>
   
  </div>
</div>
{{/unless}}


    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="commentsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <h4>Saved Comments</h4>
        <div id="savedComments">
        </div>
        <hr>
        <div id="new-comment">
            <form>
                 <div class="form-group">
                    <label id="new-comment-title-label" for="new-comment-title">New Comment</label>
                    <input type="text" class="form-control" id="new-comment-title" placeholder="New Comment Title">
                </div>
                <div class="form-group">
                    <label for="new-comment-input"></label>
                    <textarea class="form-control" id="new-comment-body" rows="3" placeholder="New Comment Message"></textarea>
                    <button class="btn btn-primary" id="saveComment">Submit</button>
                </div>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>
